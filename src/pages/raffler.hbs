  <style>
    body {
      background: #111;
      color: white;
      font-family: sans-serif;
      padding: 2rem;
    }

    h1, h2 {
      text-align: center;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }

    input[type="text"], input[type="number"] {
      padding: 0.5rem;
      font-size: 1.2rem;
      margin: 0.5rem;
      border-radius: 5px;
      border: none;
      width: 300px;
    }

    button {
      padding: 0.5rem 1rem;
      font-size: 1.2rem;
      margin-top: 0.5rem;
      background-color: #d32f2f;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .winner-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: center;
    }

    .winner-entry {
      background: #222;
      padding: 1rem;
      border-radius: 8px;
      width: 90%;
      max-width: 400px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .winner-text {
      font-size: 1.2rem;
    }

    .delete-btn {
      background-color: #f44336;
      font-size: 0.9rem;
      padding: 0.25rem 0.5rem;
    }
  </style>
