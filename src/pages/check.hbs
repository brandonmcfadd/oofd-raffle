<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Check Raffle Ticket</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: sans-serif;
      background: black;
      color: white;
      padding: 2rem;
      text-align: center;
      margin: 0;
    }

    .logo-container {
      margin-bottom: 2rem;
    }

    .logo {
      height: 8rem;
      width: auto;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }

    form {
      max-width: 500px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    input[type="number"] {
      padding: 1rem;
      font-size: 1.5rem;
      border-radius: 10px;
      border: none;
      width: 100%;
    }

    /* Use type="text" with numeric restrictions for better mobile experience */
    input[type="text"] {
      padding: 1rem;
      font-size: 1.5rem;
      border-radius: 10px;
      border: none;
      width: 100%;
    }

    button {
      padding: 1rem;
      font-size: 1.5rem;
      background-color: #d32f2f;
      color: white;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #b71c1c;
    }

    .result {
      margin-top: 2rem;
      font-size: 1.75rem;
      font-weight: bold;
    }

    .winner {
      color: #4caf50;
    }

    .loser {
      color: #f44336;
    }

    @media (max-width: 1100px) {
      body {
        padding: 1rem;
      }

      .logo {
        width: 90%;
        height: auto;
      }

      h1 {
        font-size: 2rem;
      }

      input,
      button {
        font-size: 1rem;
      }
    }
  </style>
</head>

<body>
  <div class="logo-container">
    <img src="/logo.png" alt="Logo" class="logo">
  </div>

  <h1>Check Your Hootenanny Raffle Ticket!</h1>

  <form id="ticketForm" onsubmit="checkTicket(event)">
    <input
      type="text"
      id="ticketInput"
      placeholder="Enter your ticket number"
      inputmode="numeric"
      pattern="\d*"
      maxlength="12"
    />
    <button type="submit">Check Ticket</button>
  </form>

  <div class="result" id="result"></div>

  <script>
    async function checkTicket(event) {
      event.preventDefault();

      const input = document.getElementById('ticketInput').value.trim();
      const resultDiv = document.getElementById('result');
      resultDiv.textContent = "";

      try {
        const response = await fetch('/api/current_numbers');
        const data = await response.json();

        const match = data.find(entry => entry.number.toString() === input.toString());

        if (match) {
          resultDiv.innerHTML = `<span class='winner'>ðŸŽ‰ Winner!<br>${match.prize}</span>`;
        } else {
          resultDiv.innerHTML = "<span class='loser'>Sorry, not a winner...ðŸ˜¢<br>yet...ðŸ˜‰</span>";
        }
      } catch (error) {
        console.error("Error checking ticket:", error);
        resultDiv.innerHTML = "<span class='loser'>Error checking ticket. Try again later.</span>";
      }
    }
  </script>
</body>

</html>
